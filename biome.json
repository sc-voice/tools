{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "include": [
      "src/**/*js",
      "test/**/*js",
      "src/**/*json",
      "test/**/*json"
    ],
    "ignoreUnknown": true,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 75,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noConstantCondition": "off",
        "noInvalidConstructorSuper": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "useOptionalChain": "off",
        "noForEach": "off",
        "noUselessSwitchCase": "off",
        "noUselessConstructor": "off"
      },
      "style": {
        "useConst": "off",
        "useExponentiationOperator": "off",
        "noParameterAssign": "off",
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "useSingleVarDeclarator": "off",
        "noUselessElse": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "suspicious": {
        "noApproximativeNumericConstant": "off",
        "noExportsInTest": "off",
        "noDoubleEquals": "off",
        "useIsArray": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": true,
      "quoteStyle": "single"
    }
  }
}
